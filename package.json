{
  "name": "ctestlens",
  "version": "1.0.0",
  "displayName": "CTestLens",
  "description": "Minimal VS Code Testing integration for plain C test executables.",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Testing"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cTestLens.initConfig",
        "title": "CTestLens: Create sample config"
      },
      {
        "command": "cTestLens.discover",
        "title": "CTestLens: Rediscover tests"
      },
      {
        "command": "cTestLens.openDocs",
        "title": "CTestLens: Open Documentation"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [".vscode/ctestlens.jsonc"],
        "url": "./schemas/ctestlens.schema.json"
      }
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "keywords": [
    "c",
    "testing",
    "test-discovery",
    "test-explorer",
    "vscode-testing",
    "binary-tests",
    "compiled-tests",
    "build-artifacts",
    "build-system-agnostic",
    "scan",
    "discover",
    "native"
  ],
  "author": "Sunny Narula(voidtoverse.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunnynarula/ctestlens"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
